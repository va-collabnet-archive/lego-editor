<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${basedir}/data.db/</directory>
			<outputDirectory>data.db/</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/scripts/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>pendingConcepts.tsv</include>
				<include>changeLog.txt</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${basedir}/target/legoEditor-jar-with-dependencies.jar</source>
			<outputDirectory>/</outputDirectory>
			<destName>lego-editor.jar</destName>
		</file>
	</files>
	<includeBaseDirectory>false</includeBaseDirectory>
</assembly>